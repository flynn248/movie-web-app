doctype html 
html
    head
        meta(charset='utf-8')
        title Search
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', integrity='sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T', crossorigin='anonymous')
        link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Roboto')
        link(rel="stylesheet", href='../style.css')
    body
        .header
            include header.pug

        div(class="Center" style="padding-left:100px; width: 100%" )
            h2 Search By
            form(action="/Results" method="get" style="padding-left:100px; width: 100%")
                select(name="type") Search Type
                    option(value="title") Title
                    option(value="genre") Genre
                    option(value="director") Director
                    option(value="actor") Actor
                    option(value="released_country") Country Released
                    optgroup(label="Filmed At")
                        option(value="location_country") Country
                        option(value="location_state") State
                        option(value="location_city") City
                        option(value="location_local") Local
                    optgroup(label="Rating")
                        option(value="rating_gt") Rated Above 
                        option(value="rating_ls") Rated Below
                input(type="text" name="param" placeholder="Search Parameters" style="padding-left:20px; width: 30%;")
                button(type="submit") Search
        div(class="Center")
            h6(id='login')
                a(href="/login") Login
                br
                a(href="/signup") Sign Up
        div(class="Center")
            br
            br
            br
            h4(class="Center")=`We have ${Result.movieCount} movies to search from!!`
            h4(class="Center")=`With a total of ${Result.comCount} comments from ${Result.userCount} users!!`
       
        script.
            const Result = !{jsStringify(Result)};
        script(src="../navBar.js")
        
        